---
const { ...props } = Astro.props;
---

<a {...props}>
  <slot />
</a>

<style>
  a {
    color: hsl(var(--links));
    transition: all 0.2s ease-in-out;
  }

  :global(.dark) a {
    color: hsl(var(--links));
  }

  a:hover {
    background-color: hsl(var(--muted));
    color: hsl(var(--links-hovered));
    transition: all 0.2s ease-in-out;
  }

  :global(.dark) a:hover {
    background-color: hsl(var(--muted-foreground));
    color: hsl(var(--links-hovered));
    transition: all 0.2s ease-in-out;
  }
</style>
