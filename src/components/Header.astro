---
import Navigation from "./Navigation.astro";
---

<header class="flex gap-4 w-full items-center bg-[hsl(var(--muted))]">
  <a
    class="logo p-2 text-[hsl(var(--background))] bg-[hsl(var(--foreground))]"
    href="/"
  >
    <h1 class="text-xl font-logo">BK</h1>
  </a>
  <Navigation />
  <!-- <ThemeIcon /> -->
</header>

<style>
  header {
    grid-area: header;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  :global(.dark) header {
    background-color: hsl(var(--muted-foreground));
  }

  :global(.dark) .logo {
    background-color: hsl(var(--background));
    color: hsl(var(--foreground));
  }
</style>
