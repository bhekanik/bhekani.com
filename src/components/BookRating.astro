---
import type { CollectionEntry } from "astro:content";

type Props = {
  rating: CollectionEntry<"books">["data"]["myRating"];
};

const { rating } = Astro.props;
---

<p class="text-lg m-0">
  Rating: {
    Array.from({ length: rating ?? 0 }).map(() => (
      <span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="hsl(var(--links-hovered))"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-star inline"
        >
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
        </svg>
      </span>
    ))
  }{
    Array.from({ length: 5 - (rating ?? 0) }).map(() => (
      <span class="opacity-50">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="lucide lucide-star inline"
        >
          <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
        </svg>
      </span>
    ))
  }
  Ô∏è
</p>
