---
import type { CollectionEntry } from "astro:content"

type Props = {
  description: CollectionEntry<"projects">["data"]["description"]
}

const { description } = Astro.props
---

{
  description && (
    <p class="mb-1 font-thin text-[hsl(var(--muted-foreground))]">
      <em>{description}</em>
    </p>
  )
}
