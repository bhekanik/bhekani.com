---
import type { CollectionEntry } from "astro:content";
import Case from "case";
import { format } from "date-fns";
import BookRating from "./BookRating.astro";
import TagsList from "./TagsList.astro";

type Props = {
  book: CollectionEntry<"books">;
};

const {
  book: {
    slug,
    data: { tags, title, dateAdded: date, myRating, author },
  },
} = Astro.props;
---

<div transition:name={`card-${slug}`} class="card grid gap-2 items-center">
  <div class="content p-4">
    <div class="title">
      <a href={`/books/${slug}/`} class="h-fit">
        <h1 transition:name={`title-${slug}`} class="text-xl">{title}</h1>
      </a>

      <p class="">by: {Case.upper(author)}</p>
      <TagsList tags={tags} />
    </div>

    <div class="rating text-right">
      <BookRating rating={myRating} />

      <time
        transition:name={`date-${slug}`}
        class="text-lg"
        datetime={new Date(date).toISOString()}
      >
        Added: {format(new Date(date), "MMMM dd, yyyy")}
      </time>
    </div>
  </div>
</div>

<style>
  .card {
    display: grid;
    grid-template: "content image" / 3fr 1fr;
    color: hsl(var(--card-foreground));
    background-color: hsl(var(--card));
  }

  .card:hover {
    background-color: hsl(var(--muted));
  }

  .content {
    grid-area: content;
    display: grid;
    grid-template:
      "title" auto-fit
      "description" 1fr
      "date" auto-fit
      "tags" auto-fit;
  }

  @media screen and (min-width: 768px) {
    .card {
      display: block;
    }
    .content {
      display: flex;
      justify-content: space-between;
      width: 100%;
    }
    .title {
      flex: 1;
    }
  }
  a {
    color: hsl(var(--card-foreground));
  }
  a:hover {
    background-color: transparent;
  }
</style>
