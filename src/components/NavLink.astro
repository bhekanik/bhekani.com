---
import { cn } from "../utils/cn";
const { pathname } = Astro.url;

const { href, title } = Astro.props;
---

<a
  class={cn(
    "text-[hsl(var(--muted-foreground))]",
    pathname.split("/")[1] === href.split("/")[1]
      ? "text-[hsl(var(--foreground))]"
      : ""
  )}
  href={href}>{title}</a
>
