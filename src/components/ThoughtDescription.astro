---
import type { CollectionEntry } from "astro:content";

type Props = {
  description: CollectionEntry<"thoughts">["data"]["description"];
  slug?: CollectionEntry<"thoughts">["slug"];
};

const { description, slug } = Astro.props;
---

{
  description && (
    <p
      transition:name={slug ? `description-${slug}` : ""}
      class="mb-1 font-thin text-[hsl(var(--muted-foreground))]"
    >
      <em>{description}</em>
    </p>
  )
}
