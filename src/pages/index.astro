---
import AboutCard from "../components/AboutCard.astro"
import AllTags from "../components/AllTags.astro"
import Link from "../components/Link.astro"
import MainContainer from "../components/MainContainer.astro"
import RecentPosts from "../components/RecentPosts.astro"
import BaseLayout from "../layouts/BaseLayout.astro"

const pageTitle = "Bhekani Khumalo"
---

<BaseLayout pageTitle={pageTitle}>
  <MainContainer>
    <section class="container-readable mt-8 md:mt-12 text-center">
      <h1 class="font-headings text-4xl md:text-6xl tracking-tight leading-tight">Build. Learn. Share.</h1>
      <p class="mt-4 md:mt-6 text-lg md:text-xl text-[hsl(var(--muted-foreground))] max-w-[70ch] mx-auto">
        I’m Bhekani — I write about engineering, tools, and deliberate practice. Here are my latest projects and posts.
      </p>
      <div class="mt-6 md:mt-8 flex items-center justify-center gap-3">
        <a href="/posts" class="px-4 py-2 rounded-md bg-[hsl(var(--foreground))] text-[hsl(var(--background))]">Read the blog</a>
        <a href="/projects" class="px-4 py-2 rounded-md border border-[hsl(var(--muted))]">See projects</a>
      </div>
    </section>

    <AboutCard />

    <div class="my-12">
      <h2 class="text-2xl md:text-3xl font-headings tracking-tight mb-4 mt-2">Currently Building</h2>

      <ul class="flex flex-col gap-2">
        <li>
          <div>
            <Link href="https://www.cvoptimiser.com">CV Optimiser </Link>

            <p class="mb-2">
              A tool to optimise your CV for specific job descriptions using AI.
            </p>
          </div>
        </li>
        <li>
          <div>
            <Link href="https://www.interviewoptimiser.com"
              >Interview Optimiser
            </Link>

            <p class="mb-2">
              An app providing realistic mock interviews and comprehensive
              performance reports.
            </p>
          </div>
        </li>
      </ul>
      <a
        class="mt-2 flex h-6 rounded-lg leading-7 text-[hsl(var(--muted-foreground))] hover:text-[hsl(var(--links))] transition-all"
        href="/projects/"
      >
        See all projects →
      </a>
    </div>

    <RecentPosts />

    <p class="w-full mb-8 font-bold">
      You can also <Link href="/rss.xml">subscribe with RSS</Link>
    </p>

    <AllTags />
    <iframe
      class="w-full bg-[hsl(var(--muted))] mt-8"
      src="https://justreflections.bhekani.com/embed"
      width="480"
      height="320"
      loading="lazy"></iframe>
  </MainContainer>
</BaseLayout>
