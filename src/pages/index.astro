---
import AboutCard from "../components/AboutCard.astro"
import AllTags from "../components/AllTags.astro"
import Link from "../components/Link.astro"
import MainContainer from "../components/MainContainer.astro"
import RecentPosts from "../components/RecentPosts.astro"
import BaseLayout from "../layouts/BaseLayout.astro"

const pageTitle = "Bhekani Khumalo"
---

<BaseLayout pageTitle={pageTitle}>
  <MainContainer>
    <AboutCard />

    <div class="my-12">
      <h2 class="text-2xl md:text-3xl font-headings tracking-tight mb-4 mt-2">Currently Building</h2>

      <ul class="flex flex-col gap-2">
        <li>
          <div>
            <Link href="https://faithbench.com/">FaithBench</Link>
            <p class="mb-2">
              AI theological faithfulness benchmark. 300+ test cases, 6 dimensions, 5 traditions.
            </p>
          </div>
        </li>
        <li>
          <div>
            <Link href="https://blah.chat/">blah.chat</Link>
            <p class="mb-2">
              Unified AI chat interface. One workspace for OpenAI, Anthropic, Google, and Perplexity.
            </p>
          </div>
        </li>
        <li>
          <div>
            <Link href="https://www.cvoptimiser.com">CV Optimiser</Link>
            <p class="mb-2">
              AI-powered CV tailoring against specific job descriptions.
            </p>
          </div>
        </li>
        <li>
          <div>
            <Link href="https://www.easydeck.app">EasyDeck</Link>
            <p class="mb-2">
              AI presentation generator. Prompt to deck with custom graphics.
            </p>
          </div>
        </li>
        <li>
          <div>
            <Link href="https://chromewebstore.google.com/detail/vidpulse">VidPulse</Link>
            <p class="mb-2">
              Chrome extension for AI-powered video analysis.
            </p>
          </div>
        </li>
      </ul>
      <a
        class="mt-2 flex h-6 rounded-lg leading-7 text-[hsl(var(--muted-foreground))] hover:text-[hsl(var(--links))] transition-all"
        href="/projects/"
      >
        See all projects →
      </a>
    </div>

    <RecentPosts />

    <p class="w-full mb-8 font-bold">
      You can also <Link href="/rss.xml">subscribe with RSS</Link>
    </p>

    <AllTags />
    <div class="mt-8 p-6 rounded-xl bg-[hsl(var(--card))] border border-[hsl(var(--muted))]">
      <h3 class="text-lg font-semibold mb-2">Just Reflections</h3>
      <p class="text-[hsl(var(--muted-foreground))] mb-4">
        Thoughts on software, building products, and life beyond tech. Delivered to your inbox.
      </p>
      <a
        href="https://justreflections.bhekani.com/"
        target="_blank"
        class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg bg-[hsl(var(--foreground))] text-[hsl(var(--background))] hover:opacity-90 transition-opacity"
      >
        Subscribe →
      </a>
    </div>
  </MainContainer>
</BaseLayout>
