---
import { getCollection } from "astro:content";
import BlogPost from "../components/BlogPost.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
const pageTitle = "Bhekani.com";

const allPosts = await getCollection("posts");
---

<BaseLayout pageTitle={pageTitle}>
  <h1>Bhekani Khumalo</h1>
  <h2>@bhekanik everywhere</h2>
  <p><i>Software Engineer, Writer</i></p>
  <p>
    I write about non-tech subjects that interest me on <a
      href="https://justreflections.bhekani.com/"
      target="_blank">Just Reflections</a
    >, and I am shining light on the African early stage tech startup ecosystem
    at <a href="https://dealbase.africa/" target="_blank">Dealbase.Africa</a>.
  </p>
  <p>
    <a class="text-gray-600 dark:text-gray-400 italic" href="/about"
      >â†’ More on About page</a
    >
  </p>
  <h2>Recent Posts</h2>

  <ul>
    {
      allPosts
        .slice(0, 3)
        .map((post) => (
          <BlogPost url={`/posts/${post.slug}/`} title={post.data.title} />
        ))
    }
  </ul>

  <a
    class="mt-8 flex h-6 rounded-lg leading-7 text-gray-600 transition-all dark:text-gray-400 dark:hover:text-gray-200"
    href="/blog"
    >See all posts<svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      class="ml-1 h-6 w-6"
      ><path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M17.5 12h-15m11.667-4l3.333 4-3.333-4zm3.333 4l-3.333 4 3.333-4z"
      ></path></svg
    ></a
  >
</BaseLayout>
