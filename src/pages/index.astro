---
import AboutCard from "../components/AboutCard.astro"
import AllTags from "../components/AllTags.astro"
import Link from "../components/Link.astro"
import MainContainer from "../components/MainContainer.astro"
import RecentPosts from "../components/RecentPosts.astro"
import BaseLayout from "../layouts/BaseLayout.astro"

const pageTitle = "Bhekani Khumalo"
---

<BaseLayout pageTitle={pageTitle}>
  <MainContainer>
    <AboutCard />

    <div class="my-12">
      <h2 class="text-2xl md:text-3xl font-headings tracking-tight mb-4 mt-2">Currently Building</h2>

      <ul class="flex flex-col gap-2">
        <li>
          <div>
            <Link href="https://www.cvoptimiser.com">CV Optimiser </Link>

            <p class="mb-2">
              A tool to optimise your CV for specific job descriptions using AI.
            </p>
          </div>
        </li>
        <li>
          <div>
            <Link href="https://www.interviewoptimiser.com"
              >Interview Optimiser
            </Link>

            <p class="mb-2">
              An app providing realistic mock interviews and comprehensive
              performance reports.
            </p>
          </div>
        </li>
      </ul>
      <a
        class="mt-2 flex h-6 rounded-lg leading-7 text-[hsl(var(--muted-foreground))] hover:text-[hsl(var(--links))] transition-all"
        href="/projects/"
      >
        See all projects â†’
      </a>
    </div>

    <RecentPosts />

    <p class="w-full mb-8 font-bold">
      You can also <Link href="/rss.xml">subscribe with RSS</Link>
    </p>

    <AllTags />
    <iframe
      class="w-full bg-[hsl(var(--muted))] mt-8"
      src="https://justreflections.bhekani.com/embed"
      width="480"
      height="320"
      loading="lazy"></iframe>
  </MainContainer>
</BaseLayout>
