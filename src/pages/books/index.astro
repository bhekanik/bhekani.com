---
import { Image } from "astro:assets"
import { getCollection } from "astro:content"
import MainContainer from "../../components/MainContainer.astro"
import BaseLayout from "../../layouts/BaseLayout.astro"

const allBooks = await getCollection("books")
const sortedBooks = allBooks
  .filter((book) => book.data.exclusiveShelf === "read")
  .sort(
    (a, b) =>
      new Date(b.data.dateAdded).valueOf() -
      new Date(a.data.dateAdded).valueOf(),
  )

// Group by year
const booksByYear = sortedBooks.reduce(
  (acc, book) => {
    const year = new Date(book.data.dateAdded).getFullYear()
    if (!acc[year]) acc[year] = []
    acc[year].push(book)
    return acc
  },
  {} as Record<number, typeof sortedBooks>,
)

// Stats
const totalBooks = sortedBooks.length
const avgRating = (sortedBooks.reduce((sum, b) => sum + (b.data.myRating || 0), 0) / totalBooks).toFixed(1)
const fiveStarBooks = sortedBooks.filter((b) => b.data.myRating === 5).length

// Get unique tags
const allTags = [...new Set(sortedBooks.flatMap((b) => b.data.tags || []))]

const pageTitle = "Library"
---

<BaseLayout pageTitle={pageTitle}>
  <MainContainer>
    <div class="max-w-5xl mx-auto mt-8 space-y-12">
      {/* Header Section */}
      <div class="text-center space-y-4">
        <h1 class="text-4xl font-bold">Library</h1>
        <p class="text-lg text-[hsl(var(--muted-foreground))] max-w-2xl mx-auto">
          Books I've read, reviewed, and recommend. Mostly non-fiction on technology, business, and personal growth.
        </p>
      </div>

      {/* Stats Bar */}
      <div class="flex flex-wrap gap-8 justify-center text-center py-6 border-y border-[hsl(var(--muted))]">
        <div>
          <div class="text-3xl font-bold text-[hsl(var(--accent))]">{totalBooks}</div>
          <div class="text-sm text-[hsl(var(--muted-foreground))]">Books Read</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-[hsl(var(--accent))]">{avgRating}</div>
          <div class="text-sm text-[hsl(var(--muted-foreground))]">Avg Rating</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-[hsl(var(--accent))]">{fiveStarBooks}</div>
          <div class="text-sm text-[hsl(var(--muted-foreground))]">5-Star Books</div>
        </div>
      </div>

      {/* Tags Filter */}
      <div class="flex flex-wrap gap-2 justify-center">
        {allTags.map((tag) => (
          <a
            href={`/books/tags/${tag}`}
            class="text-sm px-3 py-1 rounded-full border border-[hsl(var(--muted))] text-[hsl(var(--muted-foreground))] hover:border-[hsl(var(--accent))] hover:text-[hsl(var(--accent))] transition-colors"
          >
            {tag}
          </a>
        ))}
      </div>

      {/* Books by Year */}
      {Object.entries(booksByYear)
        .sort(([a], [b]) => Number(b) - Number(a))
        .map(([year, books]) => (
          <section class="space-y-6">
            <h2 class="text-2xl font-bold sticky top-20 bg-[hsl(var(--background))]/90 backdrop-blur-sm py-3 z-10 border-b border-[hsl(var(--muted))]">
              {year}
              <span class="text-base font-normal text-[hsl(var(--muted-foreground))] ml-2">
                ({books.length} books)
              </span>
            </h2>

            <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 lg:grid-cols-6 gap-4">
              {books.map((book) => (
                <a
                  href={`/books/${book.slug}/`}
                  class="group relative"
                >
                  <div class="aspect-[2/3] rounded-lg overflow-hidden bg-[hsl(var(--muted))] shadow-md transition-all duration-300 group-hover:shadow-xl group-hover:scale-105">
                    {book.data.ISBN ? (
                      <Image
                        src={`https://covers.openlibrary.org/b/isbn/${book.data.ISBN}-M.jpg`}
                        alt={book.data.title}
                        width={140}
                        height={210}
                        class="w-full h-full object-cover"
                      />
                    ) : (
                      <div class="w-full h-full flex flex-col items-center justify-center p-3 text-center bg-gradient-to-br from-[hsl(var(--accent)/0.15)] to-[hsl(var(--card))]">
                        <span class="text-sm font-medium leading-tight line-clamp-4 text-[hsl(var(--foreground))]">
                          {book.data.title}
                        </span>
                        <span class="text-xs text-[hsl(var(--muted-foreground))] mt-2 line-clamp-1">
                          {book.data.author}
                        </span>
                      </div>
                    )}

                    {/* Rating badge */}
                    {book.data.myRating && (
                      <div class="absolute top-2 right-2 bg-[hsl(var(--background))]/90 backdrop-blur-sm rounded-full px-1.5 py-0.5 flex items-center gap-0.5">
                        <svg class="w-3 h-3 fill-[hsl(var(--accent))] text-[hsl(var(--accent))]" viewBox="0 0 24 24">
                          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
                        </svg>
                        <span class="text-xs font-medium">{book.data.myRating}</span>
                      </div>
                    )}
                  </div>

                  {/* Hover overlay with title - only for books with covers */}
                  {book.data.ISBN && (
                    <div class="absolute inset-0 rounded-lg bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-3">
                      <h3 class="text-white text-sm font-medium leading-tight line-clamp-2">
                        {book.data.title}
                      </h3>
                      <p class="text-white/70 text-xs mt-1 line-clamp-1">
                        {book.data.author}
                      </p>
                    </div>
                  )}
                </a>
              ))}
            </div>
          </section>
        ))}
    </div>
  </MainContainer>
</BaseLayout>
