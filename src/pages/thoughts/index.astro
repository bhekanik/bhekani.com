---
import { getCollection } from "astro:content";
import FirstPostCard from "../../components/LatestThoughtCard.astro";
import MainContainer from "../../components/MainContainer.astro";
import PostCard from "../../components/ThoughtCard.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPosts = await getCollection("thoughts");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const firstPost = sortedPosts.shift();
const pageTitle = "thoughts";
---

<BaseLayout pageTitle={pageTitle}>
  <MainContainer>
    <div class="w-full flex justify-center mb-8 font-bold">
      <a
        class="px-3 p-2 text-[hsl(var(--foreground))] border-b-[1px] border-l-[1px] border-r-[1px] border-[hsl(var(--muted))]"
        href="/rss.xml"
      >
        Subscribe to RSS
      </a>
    </div>
    <FirstPostCard post={firstPost} />
    <div class="grid gap-4">
      {sortedPosts.map((post) => <PostCard post={post} />)}
    </div>
  </MainContainer>
</BaseLayout>
