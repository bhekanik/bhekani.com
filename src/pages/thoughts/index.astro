---
import { getCollection } from "astro:content";
import FirstPostCard from "../../components/LatestThoughtCard.astro";
import PostCard from "../../components/ThoughtCard.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";

const allPosts = await getCollection("thoughts");
const sortedPosts = allPosts.sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
const firstPost = sortedPosts.shift();
const pageTitle = "thoughts";
---

<BaseLayout pageTitle={pageTitle}>
  <FirstPostCard post={firstPost} />
  <div class="grid gap-4">
    {sortedPosts.map((post) => <PostCard post={post} />)}
  </div>
</BaseLayout>
